<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础父主题，确保系统栏属性生效（含状态栏亮色图标） -->
    <style name="NormalThemeStyle" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- 华为设备兼容项 -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- 冷启动阶段的主题：显示原生启动背景与居中Logo，且保留状态栏 -->
    <style name="LaunchTheme" parent="NormalThemeStyle">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- 确保预览窗口可见且非透明 -->
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Flutter 首帧之后的主题：App 运行时窗口背景及系统栏配置 -->
    <style name="NormalTheme" parent="NormalThemeStyle">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>